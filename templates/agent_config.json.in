{
    "agent": {
        "name": "@AGENT_NAME@",
        "role": "@AGENT_ROLE@",
        "version": "@PROJECT_VERSION@",
        "home": "@AGENT_HOME@"
    },
    "permissions": {
        "user": "@CMAKE_PROJECT_NAME@",
        "group": "@AGENT_ROLE@",
        "mode": "755",
        "capabilities": [
            "read_charter",
            "write_logs",
            "execute_tools",
            "access_sandbox"
        ]
    },
    "memory": {
        "persistent_store": "@AGENT_HOME@/memory",
        "cache_dir": "@AGENT_HOME@/cache",
        "max_cache_size": "1GB"
    },
    "communication": {
        "channels": [
            "expert_system",
            "feedback_loop",
            "status_update"
        ],
        "protocols": [
            "json",
            "s-expression"
        ]
    },
    "tools": {
        "allowed_commands": [
            "cmake",
            "make",
            "git",
            "scheme",
            "python"
        ],
        "environment": {
            "PATH": "@CMAKE_INSTALL_PREFIX@/bin:$PATH",
            "REDLINE_HOME": "@REDLINE_CACHE_DIR@",
            "AGENT_HOME": "@AGENT_HOME@"
        }
    },
    "expert_system": {
        "rules_dir": "@AGENT_HOME@/rules",
        "facts_dir": "@AGENT_HOME@/facts",
        "templates_dir": "@AGENT_HOME@/templates"
    },
    "logging": {
        "level": "INFO",
        "file": "@AGENT_HOME@/logs/agent.log",
        "format": "[%(asctime)s] %(levelname)s - %(message)s",
        "rotate": {
            "max_size": "10MB",
            "backup_count": 5
        }
    },
    "status_reporting": {
        "enabled": true,
        "interval": 1,
        "metrics": [
            "memory_usage",
            "task_queue_length",
            "active_operations"
        ]
    },
    "sandbox_access": {
        "allowed_sandboxes": ["development", "testing"],
        "permissions": {
            "read": true,
            "write": true,
            "execute": true
        }
    },
    "llm_integration": {
        "model": "default",
        "context_size": 4096,
        "temperature": 0.7,
        "prompt_templates": "@AGENT_HOME@/templates/prompts"
    },
    "error_handling": {
        "max_retries": 3,
        "retry_delay": 1,
        "failure_actions": {
            "notify_supervisor": true,
            "log_error": true,
            "attempt_recovery": true
        }
    },
    "dependencies": {
        "required_agents": [],
        "optional_agents": [],
        "tools": [],
        "environment": []
    }
}