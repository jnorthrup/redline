{
    "display": {
        "refresh_rate": 1,
        "format": "terminal",
        "sections": [
            "agents",
            "sandboxes",
            "tasks",
            "resources"
        ],
        "colors": {
            "header": "blue",
            "success": "green",
            "warning": "yellow",
            "error": "red"
        }
    },
    "monitoring": {
        "agents": {
            "enabled": true,
            "metrics": [
                "state",
                "memory_usage",
                "task_queue",
                "last_activity"
            ],
            "locations": {
                "cognitive": "@REDLINE_CACHE_DIR@/reasoning/cognitive",
                "planning": "@REDLINE_CACHE_DIR@/coordination/planning",
                "action_execution": "@REDLINE_CACHE_DIR@/execution/action_execution",
                "feedback_loop": "@REDLINE_CACHE_DIR@/monitoring/feedback_loop",
                "completion": "@REDLINE_CACHE_DIR@/verification/completion"
            }
        },
        "sandboxes": {
            "enabled": true,
            "metrics": [
                "status",
                "disk_usage",
                "active_tasks",
                "integration_status"
            ],
            "root": "@SANDBOX_ROOT@"
        },
        "tasks": {
            "enabled": true,
            "metrics": [
                "status",
                "progress",
                "dependencies",
                "estimated_completion"
            ],
            "queue_file": "@CMAKE_BINARY_DIR@/task_queue.json"
        },
        "resources": {
            "enabled": true,
            "metrics": [
                "cpu_usage",
                "memory_usage",
                "disk_space",
                "network_io"
            ],
            "thresholds": {
                "cpu_warning": 80,
                "memory_warning": 85,
                "disk_warning": 90
            }
        }
    },
    "logging": {
        "enabled": true,
        "file": "@CMAKE_BINARY_DIR@/logs/status_monitor.log",
        "level": "INFO",
        "format": "[%(asctime)s] %(levelname)s - %(message)s",
        "rotate": {
            "max_size": "10MB",
            "backup_count": 5
        }
    },
    "alerts": {
        "enabled": true,
        "channels": [
            "log",
            "terminal"
        ],
        "rules": [
            {
                "condition": "agent.state == 'error'",
                "action": "notify",
                "priority": "high"
            },
            {
                "condition": "resource.usage > resource.threshold",
                "action": "warn",
                "priority": "medium"
            },
            {
                "condition": "task.progress == 'stuck'",
                "action": "notify",
                "priority": "high"
            }
        ]
    },
    "expert_system": {
        "integration": {
            "enabled": true,
            "update_interval": 1,
            "metrics": [
                "rule_activations",
                "fact_updates",
                "memory_state"
            ]
        }
    },
    "visualization": {
        "enabled": true,
        "type": "ascii",
        "components": [
            "progress_bars",
            "status_indicators",
            "resource_meters",
            "task_tree"
        ],
        "layout": {
            "main_width": 80,
            "main_height": 24,
            "split": "horizontal"
        }
    }
}