{
    "sandbox_name": "@SANDBOX_NAME@",
    "created_at": "@TIMESTAMP@",
    "paths": {
        "root": "@SANDBOX_PATH@",
        "stubs": "@SANDBOX_PATH@/stubs",
        "work": "@SANDBOX_PATH@/work"
    },
    "permissions": {
        "owner": "@CMAKE_PROJECT_NAME@",
        "mode": "755"
    },
    "integration": {
        "graph_enabled": true,
        "stub_generation": true,
        "context_management": {
            "enabled": true,
            "max_context_size": 4096,
            "preserve_patterns": [
                "*.h",
                "*.cpp",
                "CMakeLists.txt"
            ]
        }
    },
    "llm_settings": {
        "context_window": 4096,
        "overlap_buffer": 512,
        "stub_template_tokens": 256
    },
    "build_settings": {
        "cmake_minimum_version": "@CMAKE_MINIMUM_REQUIRED_VERSION@",
        "build_type": "@CMAKE_BUILD_TYPE@",
        "compiler": "@CMAKE_CXX_COMPILER_ID@",
        "flags": "@CMAKE_CXX_FLAGS@"
    },
    "tools": {
        "available": [
            "cmake",
            "make",
            "gcc",
            "scheme",
            "python"
        ],
        "paths": {
            "cmake": "@CMAKE_COMMAND@",
            "make": "@CMAKE_MAKE_PROGRAM@"
        }
    },
    "monitoring": {
        "enabled": true,
        "interval": 1,
        "metrics": [
            "build_status",
            "test_results",
            "resource_usage"
        ]
    }
}